{
  "id": "set_grid_costs_settings",
  "title": {
    "en": "Update grid costs (old regime) settings",
    "no": "Oppdatér innstillinger for nettleie (gammelt regime)"
  },
  "titleFormatted": {
    "en": "Update grid costs (old regime) settings to [[gridFixedAmount]], [[gridConsumption]], [[gridNewRegime]]",
    "no": "Oppdatér innstillinger for nettleie (gammelt regime) til [[gridFixedAmount]], [[gridConsumption]], [[gridNewRegime]]"
  },
  "hint": {
    "en": "Update grid costs (old regime) settings.",
    "no": "Oppdatér innstillinger for nettleie (gammelt regime)."
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=UtilityCosts"
    },
    {
      "name": "gridFixedAmount",
      "type": "number",
      "required": false,
      "min": 0,
      "max": 9999,
      "title": {
        "en": "Yearly fixed amount",
        "no": "Årlig fastbeløp"
      },
      "placeholder": {
        "en": "kr/year",
        "no": "kr/år"
      }
    },
    {
      "name": "gridConsumption",
      "type": "number",
      "required": false,
      "min": 0,
      "max": 5,
      "title": {
        "en": "Consumption based part",
        "no": "Forbruksavhengig del"
      },
      "placeholder": {
        "en": "kr/kWh",
        "no": "kr/kWh"
      }
    },
    {
      "name": "gridNewRegime",
      "type": "dropdown",
      "required": false,
      "title": {
        "en": "New grid costs regime",
        "no": "Nye regler for nettleie"
      },
      "values": [
        {
          "id": "false",
          "label": {
            "en": "No",
            "no": "Nei"
          }
        },
        {
          "id": "true",
          "label": {
            "en": "Yes",
            "no": "Ja"
          }
        }
      ]
    }
  ]
}